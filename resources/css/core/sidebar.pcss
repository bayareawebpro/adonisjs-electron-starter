.sidebar {
    width: 180px !important;
    min-width: 180px !important;
    @apply bg-gray-900 shadow-lg;
}
.sidebar-header{
    @apply text-gray-500 font-bold uppercase text-xs;
}
.sidebar-header:hover{
    @apply text-blue-500;
}
.sidebar-link{
    @apply text-gray-500 text-sm leading-none py-2 block mt-1 cursor-pointer ml-3;
}
.sidebar-link:hover,
.sidebar-link:active {
    @apply text-gray-300;
    @apply outline-none;
}
.sidebar-link.router-link-active,
.sidebar-link.router-link-exact-active{
    @apply font-bold text-blue-500 outline-none;
}
.sidebar-content{
    @apply p-3 sticky top-0 bottom-auto
}
